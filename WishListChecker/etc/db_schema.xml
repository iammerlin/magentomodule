<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="wishlist_ordered_product_table" resource="default" engine="innodb"
            comment="WishList Ordered Product">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="customer_id" padding="11" unsigned="false" nullable="false" identity="false" comment="Customer ID"/>
        <column xsi:type="int" name="products_id" padding="11" unsigned="false" nullable="false" identity="false" comment="Products ID"/>
        <column xsi:type="int" name="is_notify" padding="11" unsigned="false" nullable="false" identity="false" comment="Notify"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>